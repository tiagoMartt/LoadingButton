<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingButton">

        <attr name="buttonColor" format="reference|color" />
        <attr name="buttonColorDisabled" format="reference|color" />
        <attr name="buttonStrokeColor" format="reference|color" />
        <attr name="buttonStrokeColorDisabled" format="reference|color" />
        <attr name="buttonStrokeWidth" format="dimension" />
        <attr name="buttonRippleColor" format="reference|color" />
        <attr name="buttonCornerRadius" format="dimension" />

        <attr name="text" format="string" />
        <attr name="textMarginTop" format="dimension" />
        <attr name="textMarginBottom" format="dimension" />
        <attr name="textMarginStart" format="dimension" />
        <attr name="textMarginEnd" format="dimension" />
        <attr name="textColor" format="reference|color" />
        <attr name="textColorDisabled" format="reference|color" />
        <attr name="textSize" format="dimension" />
        <attr name="textFontFamily" format="string"/>
        <attr name="textIsAllCaps" format="boolean" />

        <attr name="iconPosition" format="integer">
            <enum name="stuck" value="5"/>
            <enum name="free" value="6"/>
        </attr>
        <attr name="iconHorizontalBias" format="float" />
        <attr name="iconVerticalBias" format="float" />
        <attr name="iconAlign" format="integer">
            <enum name="start" value="1"/>
            <enum name="end" value="2"/>
            <enum name="center" value="7"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="iconWidth" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="iconHeight" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="iconMarginTop" format="dimension" />
        <attr name="iconMarginBottom" format="dimension" />
        <attr name="iconMarginStart" format="dimension" />
        <attr name="iconMarginEnd" format="dimension" />
        <attr name="iconSrc" format="reference|color" />
        <attr name="iconTint" format="reference|color" />
        <attr name="iconTintDisabled" format="reference|color" />
        <attr name="iconScaleType" format="integer">
            <enum name="centerCrop" value="6"/>
            <enum name="center" value="5"/>
            <enum name="fitCenter" value="3"/>
            <enum name="centerInside" value="7"/>
            <enum name="fitEnd" value="4"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitXY" value="1"/>
            <enum name="matrix" value="0"/>
        </attr>

        <attr name="progressBarWidth" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="progressBarHeight" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="progressBarMarginTop" format="dimension" />
        <attr name="progressBarMarginBottom" format="dimension" />
        <attr name="progressBarMarginStart" format="dimension" />
        <attr name="progressBarMarginEnd" format="dimension" />
        <attr name="progressBarColor" format="reference|color" />

        <attr name="android:enabled" format="boolean" />

    </declare-styleable>

</resources>